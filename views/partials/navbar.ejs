<div class="container-fluid">
    <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
        <a class="navbar-brand" href="/">Socio</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                <a class="nav-link" href="/socio">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/socio/new">New Post</a>
                </li>
            </ul>
            <ul class="navbar-nav justify-content-end">
                <% if(!currentUser) { %>
                <li class="nav-item">
                    <a href="/login" class="nav-link">Login</a>
                </li>
                <li class="nav-item">
                    <a href="/register" class="nav-link">Register</a>
                </li>
                <% }else{ %>
                <li class="nav-item">
                    <a href="/profile/<%= currentUser._id %>" class="nav-link">Signed in As <%= currentUser.username %> </a>
                </li>
                <li class="nav-item">
                        <a href="/logout" class="nav-link">Log Out</a>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
</div>

<% if(success && success.lenght>0 ){ %>
<div class="alert alert-success" role="alert">
    <%= success %>
</div>
<% } %>
<% if(warning && warning.lenght>0){ %>
<div class="alert alert-success" role="alert">
    <%= warning %>
</div>
<% } %>
<% if (error && error.lenght>0){ %>
<div class="alert alert-success" role="alert">
    <%= error %>
</div>
<% } %>
