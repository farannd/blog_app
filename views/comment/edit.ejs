<% include ../partials/navbar %>

<div class="container px-5">
    <h1 class="text-center">Update Comment</h1>
    <form method="POST" action="/socio/<%= idPost %>/comment/<%= commentValue._id %>?_method=PUT">
        <div class="form-group">
            <label for="newContent">Content Put Here</label>
            <textarea name="comment[text]" class="form-control" id="newContent" required cols="30" rows="10"><%= commentValue.text %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

