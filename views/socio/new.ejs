<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container px-5">
    <h1 class="text-center">New Post</h1>
    <form method="POST" action="/socio">
        <div class="form-group">
            <label for="newTitle">Title</label>
            <input id="newTitle" type="text" class="form-control" name="post[title]" placeholder="Title" required>
        </div>
        <div class="form-group">
            <label for="newImage">Image URL</label>
            <input id="newImage" type="text" class="form-control" name="post[image]" placeholder="Image URL" required>
        </div>
        <div class="form-group">
            <label for="newDescription">Description Put Here</label>
            <textarea name="post[description]" class="form-control" id="newDescription" required cols="30" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

