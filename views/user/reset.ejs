<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container px-5">
    <h1 class="text-center">Forgot Your Password</h1>
    <form method="POST" action="/reset/<%= token %>">
        <div class="form-group"> 
            <label for="usernameReg">New Password</label>
            <input id="usernameReg" type="password" class="form-control" name="password" placeholder="Password" required>
        </div>
        <div class="form-group">
          <label for="confirm">Confirm Password</label>
          <input id="confirm" type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

